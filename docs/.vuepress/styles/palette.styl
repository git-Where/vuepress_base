@require './black'
$defaultWidth = 70%!important;  //pc端全局高度

body{
    text-shadow: 0 3px 6px rgba(0,0,0,.1)!important;
    transition: all .3s;
}
blockquote > p{
  color: #666666;
}
/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar
{
  width: 10px;
  height: 10px;
  border-radius: 10px;
  background-color: #F5F5F5;
}

/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
  background-color: #F5F5F5;
}

/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,.3);
  border-radius: 10px;
  /* 线性渐变 */
  background-image: -webkit-gradient(linear, 
  left bottom, left top,
   color-stop(0.44, rgb(60,186,146)), 
   color-stop(0.72, rgb(253,187,45)), 
   color-stop(0.86, rgb(253,187,45)));
  transition: 0.3s ease-in-out;
}
/*定义滑块悬浮样式*/
::-webkit-scrollbar-thumb:hover{
  background-image: -webkit-gradient(linear, 
  left bottom, left top, 
  color-stop(0.44, rgb(253,187,45)), 
  olor-stop(0.72, rgb(253,187,45)), 
  color-stop(0.86, rgb(60,186,146)));
  transition: 0.3s ease-in-out;
}

.theme-default-content:not(.custom){
  max-width: $defaultWidth;  
}

// 修改valine 

#valine-vuepress-comment{
  width: 70%;
  margin: 0 auto;  
}

.page-edit, .page-nav{
  max-width: $defaultWidth;  
}

.juzhong{
  width: 70%;
  margin: 1rem auto!important;
  box-sizing: border-box;
}

.theme-container blockquote{
  position: relative;
  width: 100%;
  font-size: 14px;
  background: rgba(27,195,251,0.1);
  margin: 1em 0;
  padding: 16px;
  border-left: 4px solid #1BC3FB;
  border-radius: 4px;
}

.night .theme-container blockquote{
    background: rgba(27,195,251,0.7);
}

.theme-container code{
  padding: 3px 3px 0px 3px;
  margin: 0px 2px;
  border-radius: 2px;
  background: rgba(27,195,251,0.1);  
}

@media screen and ( max-width:768px ){
    #valine-vuepress-comment{
    width: 85%; 
  }
  .juzhong{
    width: 85%;
  }
  .theme-container blockquote{
    width: 90%;  
  }
}

